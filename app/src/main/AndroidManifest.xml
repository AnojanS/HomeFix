<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.homefix.homefix">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <!-- android:exported="true" allows app to run specified activity -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login" />
        <activity
            android:name=".Welcome"
            android:label="@string/title_activity_welcome" />
        <activity
            android:name=".AdminServices"
            android:exported="true" />
        <activity
            android:name=".EditService"
            android:exported="true" />
        <activity
            android:name=".AdminOptions"
            android:exported="true" />
        <activity
            android:name=".ServiceDetails"
            android:exported="true" />
        <activity
            android:name=".CreateAccount"
            android:exported="true" />
        <activity
            android:name=".AddService"
            android:exported="true" />
        <activity
            android:name=".ServiceInfo"
            android:exported="true" />
        <activity
            android:name=".ServiceProviderMain"
            android:exported="true" />
        <activity
            android:name=".ServiceProviderAvailabilityPage"
            android:exported="true" />
        <activity
            android:name=".ServiceProviderProfilePage"
            android:exported="true" />
        <activity
            android:name=".ServiceProviderSeviceSelectionPage"
            android:exported="true" />
        <activity android:name=".Write_A_Review" />
        <activity android:name=".All_Availabilities" />
        <activity android:name=".all_current_bookings"></activity>
    </application>

</manifest>