<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/beige">

    <ImageButton
        android:id="@+id/avail_screen_back_button"
        style="@style/Widget.AppCompat.ImageButton"
        tools:srcCompat="?attr/homeAsUpIndicator"
        android:layout_width="65dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="false"
        android:background="#FFF0c7"
        android:cropToPadding="false"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <Button
        android:id="@+id/time_choice_button"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/select_availability_txt"
        android:layout_marginStart="127dp"
        android:text="Choose Times" />

    <TextView
        android:id="@+id/select_availability_txt"
        android:layout_width="412dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="115dp"
        android:text="Select Your Availability Times"
        android:textAlignment="center"
        android:gravity="top"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/all_available_times"
        android:layout_width="match_parent"
        android:layout_height="367dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/current_times_txt"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_above="@+id/all_available_times"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="@string/times"
        android:gravity="center_vertical"
        android:textStyle="italic|bold" />
</RelativeLayout>