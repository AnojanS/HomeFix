<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige">

    <Button
        android:id="@+id/service_provider_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/service_provider_booking_back_button"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/common_google_signin_btn_text_dark"
        android:text="Profile"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <TextView
        android:id="@+id/current_bookings_text"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="83dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="77dp"
        android:text="All Current Bookings"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textFontWeight="18"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/service_provider_booking_back_button"
        style="@style/Widget.AppCompat.ImageButton"
        tools:srcCompat="?attr/homeAsUpIndicator"
        android:layout_width="65dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="false"
        android:background="#FFF0c7"
        android:cropToPadding="false"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="559dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/bookings_listview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="30" />

            <ListView
                android:id="@+id/cancel_bookings_listview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="90" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>