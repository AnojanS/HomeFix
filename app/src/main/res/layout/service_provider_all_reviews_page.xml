<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige">

    <ImageButton
        android:id="@+id/reviews_back_button"
        style="@style/Widget.AppCompat.ImageButton"
        tools:srcCompat="?attr/homeAsUpIndicator"
        android:layout_width="65dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:adjustViewBounds="false"
        android:background="#FFF0c7"
        android:cropToPadding="false"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/service_provider_reviews_page_top_label"
        android:layout_width="324dp"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="46dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="37dp"
        android:text="Reviews"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/service_provider_all_reviews_list"
        android:layout_width="324dp"
        android:layout_height="463dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/service_provider_reviews_page_top_label"
        android:layout_marginBottom="83dp" />

</RelativeLayout>