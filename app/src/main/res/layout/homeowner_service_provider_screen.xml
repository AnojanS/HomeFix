<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/beige">


    <ImageButton
        android:id="@+id/homeOwnerServiceProviderBackButton"
        style="@style/Widget.AppCompat.ImageButton"
        tools:srcCompat="?attr/homeAsUpIndicator"
        android:layout_width="65dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="false"
        android:background="#FFF0c7"
        android:cropToPadding="false"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:contentDescription="@string/HomeOwnerServiceProviderBackButton" />

    <ListView
        android:id="@+id/homeowner_service_providerlv"
        android:layout_width="305dp"
        android:layout_height="348dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="42dp"
        android:layout_marginLeft="42dp"
        android:layout_marginBottom="38dp" />

    <TextView
        android:id="@+id/serviceNameTitle"
        android:layout_width="180dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="54dp"
        android:text="@string/service_providers"
        android:textAlignment="center"
        android:textSize="23sp"
        android:textStyle="bold" />
</RelativeLayout>